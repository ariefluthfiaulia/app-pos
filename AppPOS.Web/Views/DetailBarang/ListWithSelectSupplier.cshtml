@model IEnumerable<AppPOS.ViewModel.DetailBarangViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deskripsi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HargaPembelian)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stok)
        </th>
        <th>Hapus</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <div class="btn-group btn-group-sm">
                <button type="button" class="btn btn-primary btn-Select" data-id="@item.Id" onclick="TambahBarangKeTabelDetail(@item.Id)" title="Select" data-dismiss="modal">
                    <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                </button>
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Deskripsi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HargaPembelian)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stok)
        </td>
    </tr>
}

</table>
