
@{
    ViewBag.Title = "Barang";
}

@*<h2>@ViewBag.Title</h2>*@

<div class="box">
    <div class="box-body">
        <div class="row">
            <div class="col-lg-12">
                <button type="button" id="btn-add" class="btn btn-success" title="Create New">Create New</button>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-lg-12">
                <div id="table-list">
                    tablenya di sini broooo!!
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-form" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modal title</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            ShowList();
        });

        function ShowList()
        {
            $.ajax({
                url: '@Url.Action("List", "Barang")',
                type: 'get',
                success: function (result)
                {
                    $("#table-list").html(result);
                }
            });
        }

        $("#btn-add").click(function () {
            $.ajax({
                url: '@Url.Action("Create", "Barang")',
                type: 'get',
                success: function (result) {
                    $(".modal-title").html("Create New");
                    $(".modal-body").html(result);
                    $("#modal-form").modal("show");
                }
            });
        });
    </script>
}
